{
  "name": "auth-api",
  "version": "1.0.0",
  "description": "Authentication API with Express, Prisma, MongoDB and JWT",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --runInBand --detectOpenHandles",
    "test:watch": "jest --watch",
    "prisma:generate": "prisma generate --schema=prisma/user.schema.prisma && prisma generate --schema=prisma/message.schema.prisma",
    "prisma:push": "prisma db push --schema=prisma/user.schema.prisma && prisma db push --schema=prisma/message.schema.prisma",
    "prisma:generate:user": "prisma generate --schema=prisma/user.schema.prisma",
    "prisma:generate:message": "prisma generate --schema=prisma/message.schema.prisma",
    "prisma:push:user": "prisma db push --schema=prisma/user.schema.prisma",
    "prisma:push:message": "prisma db push --schema=prisma/message.schema.prisma",
    "seed:user": "node scripts/createDummyUser.js",
    "seed:user2": "node scripts/createSecondUser.js",
    "seed:clear": "node scripts/clearUsers.js",
    "seed:all": "node scripts/clearUsers.js && node scripts/createDummyUser.js && node scripts/createSecondUser.js"
  },
  "keywords": [
    "express",
    "prisma",
    "mongodb",
    "jwt",
    "authentication"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.21.2",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prisma": "^5.7.0",
    "supertest": "^6.3.3"
  }
}
